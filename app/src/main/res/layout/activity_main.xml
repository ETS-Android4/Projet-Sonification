                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@drawable/fondbis"
                                             tools:context=".MainActivity">

    <ImageView
        android:id="@+id/play"
        android:layout_width="0dp"
        android:layout_height="60dp"
